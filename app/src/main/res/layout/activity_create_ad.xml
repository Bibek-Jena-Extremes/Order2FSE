<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.Advertisement.CreateAdActivity">

    <include layout="@layout/toolbar">

    </include>
    <com.weiwangcn.betterspinner.library.BetterSpinner
        android:id="@+id/adSpinner"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:text="Select Ad Type"
        android:visibility="visible"
        android:textSize="14sp"
        android:drawableLeft="@drawable/ic_baseline_local_mall_24"
        android:textAlignment="center"
        android:padding="10dp"
        android:background="@drawable/edittext_design_shape2">

    </com.weiwangcn.betterspinner.library.BetterSpinner>

    <com.weiwangcn.betterspinner.library.BetterSpinner
        android:id="@+id/plan_type_Spinner"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:text="Select Plan Type"
        android:visibility="visible"
        android:textSize="14sp"
        android:drawableLeft="@drawable/ic_baseline_local_mall_24"
        android:textAlignment="center"
        android:padding="10dp"
        android:background="@drawable/edittext_design_shape2">

    </com.weiwangcn.betterspinner.library.BetterSpinner>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_weight="0.5"
            android:textSize="16sp"
            android:text="Start Date" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_weight="0.5"
            android:textSize="16sp"
            android:text="End Date" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/start_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:background="@drawable/edittext_design_shape"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_weight="0.5"
            android:textSize="16sp"
            android:hint="Select Start Date" />
        <TextView
            android:id="@+id/end_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:background="@drawable/edittext_design_shape"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_weight="0.5"
            android:textSize="16sp"
            android:hint="Select End Date" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/how_many_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:visibility="gone"
            android:layout_weight="0.5"
            android:background="@drawable/edittext_design_shape2"
            android:drawableLeft="@drawable/ic_baseline_local_mall_24"
            android:drawablePadding="10dp"
            android:hint="For How Many Days ?"
            android:inputType="numberDecimal"
            android:padding="10dp"
            android:textSize="14sp">

        </TextView>

        <Button
            android:id="@+id/calculate_btn"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="0.5"
            android:layout_marginBottom="10dp"
            android:text="Click To See Price"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@drawable/edittext_design_shape">

        </Button>

    </LinearLayout>



    <TextView
        android:id="@+id/total_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/edittext_design_shape2"
        android:drawablePadding="10dp"
        android:hint="Total Price"
        android:inputType="number"
        android:gravity="center"
        android:maxLines="10"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp">

    </TextView>

    <Button
        android:id="@+id/submit_btn"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_marginBottom="10dp"
        android:text="Submit"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@drawable/edittext_design_shape">

    </Button>





</LinearLayout>